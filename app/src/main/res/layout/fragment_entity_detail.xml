<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gmb.madridshops.fragment.EntityDetailFragment">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/entity_detail_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/colorPrimaryDark"
        tools:src="@drawable/googleg_standard_color_18"
        android:layout_weight="1"
        />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:text="NAME"
            android:id="@+id/entity_detail_name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="DESC"
            android:layout_weight="1"
            android:id="@+id/entity_detail_desc"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="HOURS"
            android:layout_weight="1"
            android:id="@+id/entity_detail_hours"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:text="ADDRESS"
            android:layout_weight="1"
            android:id="@+id/entity_detail_address"
            />
    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>
